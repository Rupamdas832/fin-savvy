generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  user_id String @id @default(uuid())
  first_name String
  last_name String
  email String @unique
  created_at DateTime @default(now())
}

